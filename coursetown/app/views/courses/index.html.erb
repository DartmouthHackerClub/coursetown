<h1>Course Listings</h1>
  
<table>
  <tr>
    <% if @user.present? %>
    <th>Wishlist</th>
    <% end %>
    <th>Department</th>
    <th>Number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<%= form_tag do %>
  <% @courses.each do |course| %>
    <tr>
      <% if @user.present? %>
        <td>
          <%= check_box_tag 'course[#{course.id}][wishlist]', true.to_s, @wishlist.include?(course) %>
        </td>
      <% end %>
      <td><%= course.department %></td>
      <td><%= course.number %></td>
      <td><c></td>
      <td><%= link_to 'Show', course %></td>
      <td><%= link_to 'Edit', edit_course_path(course) %></td>
      <td><%= link_to 'Destroy', course, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
  
  <input name="commit" type="submit" value="Update Wishlist" />
  
<% end %>


<br />

